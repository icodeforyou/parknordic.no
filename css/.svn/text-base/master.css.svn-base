html,
body {
    height: 100%;
}
body {
	font-family: Arial;
	font-size: 13px;
	line-height: 1.3em;
	color: #333;
}
h1, h2, h3, h4, h5, h6 {
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 300; 
	margin-bottom: 20px;
}
h1, h2, h3 {
	font-size: 34px;
	line-height: 23px;
}
.error {
	color: red
}
