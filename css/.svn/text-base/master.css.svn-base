#wrapper {
	min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -79px;
}
#content-wrapper {
	min-height: 530px;
}
#push,
#footer {
    height: 79px;
}
#footer {
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 300; 
	font-size:11px;
	color: #656565;
	background: #262725 url(/img/footer-bakg.png) repeat-x;
}
#footer p {
	padding: 10px 0;
}
#footer strong {
	color: #a7a7a7;
}
#top-wrapper {
	background: url(/img/header_bg.png) repeat-x;
	height: 352px;
}
#top {
	height: 50px;
	margin-top: 15px;
}
	#right-top-frame {
		margin-left: 5px;
		padding: 10px;
		height: 120px;
		width: 265px;
		background: url(/img/right-top-bkg.png) no-repeat;
		
	}
	#right-top-frame p,
	#right-bottom-frame p {
		line-height: 14px;
	}
	#right-top-frame p a,
	#right-bottom-frame p a  {
		font-weight: 800;
		text-decoration: underline;
	}
	#right-top-frame p a:hover,
	#right-bottom-frame p a:hover {
		color: #fff;
	}
	#right-top-frame ul {
		overflow: scroll;
		max-height: 80px;
	}
	#right-bottom-frame {
		margin-left: 5px;
		padding: 10px;
		height: 120px;
		width: 265px;
		background: url(/img/right-bottom-bkg.png) no-repeat;
	}
	#right-top-frame h4 {
		color: #000;
		font-size: 20px;
	}
	#right-top-frame h4,
	#right-top-frame h4 a {
		color: #000;
		font-size: 20px;
	}
	#right-bottom-frame h4,
	#right-bottom-frame h4 a {
		color: #fff;
		font-size: 20px;
	}
	#right-top-frame h4, #right-bottom-frame h4 {
		margin: 2px 0;
		font-weight: 800;
	}

#main-content {
	padding-top: 20px;
}

#logo {
	margin-left:0;
	padding-top: 5px;
}
#lots ul,
#lots p {
	padding: 0 10px;
}

#lots {
	color: #aaa;
}
#lots li:first-child {
	border-top: 1px dotted;
}
#lots li {
	border-bottom: 1px dotted;
	padding: 5px 0;
}
#top .nav {
	margin-top: 10px;
	margin-right: 20px;
}
#top .nav li {
	float:left;
	margin-right: 5px;
	/*min-width: 100px;*/
	text-align:center;
	margin: 0 10px;
}
#top .nav li a {
	height: 25px;
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 700; 
	text-shadow:none !important;
	text-transform: uppercase;
	color: #fff;
}

#top .nav li a:hover {
	/*background: url(/img/nav-bakg.png) no-repeat bottom;*/
	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	color: #111111;
	background: none;
}
.tilbuds-box {
	padding: 5px;
	background-color: #e0f8ff;
	border: 1px solid #99dff9;
	min-height: 200px;
}

/** ADMIN  **/
#lot-admin-table tbody tr {
	cursor: pointer;
}
